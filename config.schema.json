        },
        {
          "key": "pageDownB"
        },
        {
          "key": "popUpMenuB"
        }
      ]
    },
    {
      "type": "fieldset",
      "title": "Other Buttons",
      "expandable": true,
      "expanded": false,
      "items": [
        {
